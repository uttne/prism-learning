<Window x:Class="Sample01.Views.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Sample01.Views"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="450" Width="800">
    <!-- ViewModelLocator をつかうことで ViewModel を自動でバインドする -->
    <DockPanel LastChildFill="True">
        <Border>
            <Image Source="pack://application:,,,/Module;component/Resource/british-4912211_1920.jpg" Width="220"/>
        </Border>
        
        <ContentControl prism:RegionManager.RegionName="ContentRegion" Margin="5"></ContentControl>

    </DockPanel>
</Window>